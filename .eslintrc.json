{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-native/recommended"
  ],
  "parser": "@javascript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "react-native"],
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
